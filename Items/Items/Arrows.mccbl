:: "Cloud maker"
execute @e[type=Arrow,score_sickness_min=1] ~ ~ ~ summon AreaEffectCloud ~ ~0.25 ~ {Duration:200,Radius:1,Effects:[{Duration:300,Amplifier:9,ShowParticles:0,Id:9}]}
